<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title>用户登录</title>

    <link rel="stylesheet" href="/admin/css/login.css" />
  </head>
  <body>
    <div class="container">
      <div id="login">
        <form
          action="/<%=config.adminPath%>/login/doLogin"
          method="post"
          id="myform"
        >
          <div class="l_title">XIAOMI mall backstage management system</div>
          <dl>
            <dd>
              Name Of Manager:<input
                class="text"
                type="text"
                name="username"
                id="username"
              />
            </dd>
            <dd>
              Password:<input
                class="text"
                type="password"
                name="password"
                id="password"
              />
            </dd>
            <dd>
              Verification Code:<input id="verify" type="text" name="code" />
              <img
                id="verify_img"
                src="/<%=config.adminPath%>/login/code"
                title="看不清？点击刷新"
                onclick="javascript:this.src='/<%=config.adminPath%>/login/code?t='+Math.random()"
              />
            </dd>
            <dd>
              <button type="submit" class="submit" name="dosubmit"></button>
            </dd>
          </dl>
        </form>
      </div>
    </div>
  </body>
</html>
